<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <script src="~/scripts/jquery-2.2.2.js"></script>
        
        <script src="~/scripts/bootstrap.js"></script>
        <script src="~/scripts/angular.js"></script>
        <script src="~/scripts/angular-animate.js"></script>
        <script src="~/scripts/angular-route.js"></script>
        <script src="~/scripts/angular-resource.js"></script>

        <link href="~/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/bootstrap-theme.min.css" rel="stylesheet" />
        <link href="~/css/app/style.css" rel="stylesheet" />

        @*Datepicker*@
        @*<link href="~/font-awesome-4.6.1/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/datepicker/css/ngDatepicker.css" rel="stylesheet" />
        <script src="~/datepicker/js/ngDatepicker.min.js"></script>
        <script src="~/datepicker/moment-with-locales.js"></script>*@
        <link href="~/jquery-ui-1.11.4.custom/jquery-ui.css" rel="stylesheet" />
        <script src="~/jquery-ui-1.11.4/jquery-ui.min.js"></script>

        <script src="~/scripts/Controller/LandingPageController.js"></script>
        <script src="~/scripts/Controller/customertypeController.js"></script>
        <script src="~/scripts/Controller/SupplierController.js"></script>
        <script src="~/scripts/Controller/JournalController.js"></script>
        <script src="~/scripts/Controller/AccountController.js"></script>
        <script src="~/scripts/app/app.js"></script>
        

    </head>

    <body ng-app="myapp">

        <div ng-init="user={authenticated:@Model.Authenticated,UserName:'@Model.UserName'}">
            @Model.Authenticated
            @Model.UserName
            <nav class="navbar navbar-default navbar-inverse" role="navigation" ng-controller="SignInCtrl">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        
                        <a class="navbar-brand" href="/Home/Index">Vikaro</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                        <ul class="nav navbar-nav" ng-show="user.authenticated">
                            <li><a href="/Home/Index">Home</a></li>

                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown">
                                    Settings <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-user">
                                    <li>
                                        <a href="/#/Suppliers">Suppliers</a>
                                    </li>
                                    <li>
                                        <a href="/#/Customers">Customers</a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a href="/#/CustomerType">Customer Type</a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a href="/#/Journals">Journal</a>
                                    </li>
                                    <li>
                                        <a href="/#/Accounts">Account</a>
                                    </li>
                                </ul>
                            </li>

                            @*<li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink("CustomerType", "CustomerType", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Orders", "Index", "Orders", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Products", "Index", "Products", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Customer", "Index", "Customer", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Supplier", "Index", "Supplier", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Setting", "Index", "Setting", new { area = "" }, null)</li>
            <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>*@
                        </ul> 


                        <ul class="nav navbar-nav navbar-right" ng-show="!user.authenticated">
                            <li><p class="navbar-text">Already have an account?</p></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login</b> <span class="caret"></span></a>
                                <ul id="login-dp" class="dropdown-menu">
                                    <li>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <form name="signForm" role="form" >
                                                    <div class="form-group">
                                                        <label class="sr-only" for="exampleInputEmail2">User Name</label>
                                                        <input type="text" placeholder="Username" id="username" ng-model="user.UserName" class="form-control" required autofocus>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="sr-only" for="exampleInputPassword2">Password</label>
                                                        <input type="password" placeholder="Password" id="password" ng-model="user.Password" class="form-control" required autofocus>

                                                    </div>
                                                    <div class="form-group">
                                                        <div class="help-block text-right">
                                                            <a href="#">Forget the password ?</a>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="submit" value="Sign In" class="btn btn-primary btn-block" ng-click="signIn()" ng-disabled="signForm.$invalid" />
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="bottom text-center">
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right" ng-show="user.authenticated">


                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">

                                    <i class="fa fa-user fa-fw"></i> <span>Welcome, {{user.UserName}}</span>  <span class="caret"></span>

                                </a>
                                <ul class="dropdown-menu dropdown-user">
                                    <li>
                                        <a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a id="logout" href="javascript:void(0)" ng-click="signOut()" ng-show="user.authenticated"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                                    </li>
                                </ul>
                                <!-- /.dropdown-user -->
                            </li>
                            <!-- /.dropdown -->
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>

            <div class="body-content" ng-show="user.authenticated">
                <div ng-controller="LandingPageController">
                    <div ng-view></div>
                </div>
                
            </div>
            <hr />
            <footer id="footers">
                <p>Vikaro &copy; @DateTime.Now.Year</p>
            </footer>
        </div>
    </body>
</html>